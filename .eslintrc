{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "jest": false
  },
  "ecmaFeatures": {
    "jsx": true,
    "globalReturn": false
  },
  "rules": {
    "comma-dangle" : [1, "never"],
    "func-names"   : 0,
    "key-spacing"  : 0,
    "space-before-function-paren" : [2, "always"],
    "no-else-return"   : 0,
    "no-multi-spaces"  : 0,
    "quotes"           : [2, "single"],
    "jsx-quotes"       : [2, "prefer-single"],
    "one-var"          : 0
  }
}
